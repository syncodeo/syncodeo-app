{
    "compilerOptions": {
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "lib": [
            "es2015",
            "es2016",
            "dom",
            "es2018.promise"
        ]
    },
    "include": [
        "src"
    ]
}